
@{
    Layout = null;
}

<div class="container">
    @if (string.IsNullOrEmpty(ViewBag.UserName)) {
    <div class="row">
        <a class="btn btn-sm btn-primary" asp-area="" asp-controller="Security" asp-action="Register">Register</a>
        <a class="btn btn-sm btn-info ml-1" asp-area="" asp-controller="Security" asp-action="Login">Log in</a>
    </div>

    }
    else {
    <div class="row justify-content-center">
        <span class="text-success">Hello @ViewBag.UserName</span>
        <a class="btn btn-sm btn-danger mt-1" asp-area="" asp-controller="Security" asp-action="Logout">Log out</a>
    </div>
    }

</div>