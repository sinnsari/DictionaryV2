@model EngDictionary
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<form asp-controller="Admin" asp-action="Edit" method="post">
    <input asp-for="Id" />
    <div class="form-group">
        <label asp-for="EngStr">English : </label>
        <input asp-for="EngStr" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="TrStr">Turkish : </label>
        <input asp-for="TrStr" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Edit This!</button>
</form>
