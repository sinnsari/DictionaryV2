@model IEnumerable<EngDictionary>
@{
    ViewData["Title"] = "Test";
}


@if (Model.Count() > 0) {

    <div class="container">
        <div class="row">
            <div class="col">

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">English</th>
                            <th scope="col">Turkish</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model) {
                            <tr>
                                <th scope="row"></th>
                                <td>@item.EngStr</td>
                                <td>
                                    <input type="text" id="@item.Id" disabled="disabled" />
                                    <input type="submit" onclick="ShowTr(@item.Id,'@item.TrStr')" value="Show" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


}


    <script>
        function ShowTr(id, str) {

            var selector = '#' + id;
            $(selector).val(str);
        };
    </script>